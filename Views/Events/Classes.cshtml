@model SailingResultsPortal.Models.Race

@{
    ViewData["Title"] = "Classes of " + Model.Name;
    string eventId = ViewData["EventId"] as string ?? string.Empty;
    string raceId = ViewData["RaceId"] as string ?? string.Empty;
}

<nav class="text-sm text-gray-600 mb-4" aria-label="Breadcrumb">
    <ol class="list-reset flex">
        <li><a href="/Events" class="hover:underline">Events</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/Events/Races?eventId=@eventId" class="hover:underline">Races</a></li>
        <li><span class="mx-2">/</span></li>
        <li>@Model.Name</li>
    </ol>
</nav>

<h1 class="text-2xl font-bold mb-4">Classes in @Model.Name</h1>

<a href="/Events/CreateClass?eventId=@eventId&raceId=@raceId" 
   class="inline-block mb-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">+ New Class</a>

<table class="w-full border-collapse border border-gray-300">
    <thead>
        <tr class="bg-gray-200">
            <th class="border border-gray-300 p-2 text-left">Name</th>
            <th class="border border-gray-300 p-2 text-center">Scoring Method</th>
            <th class="border border-gray-300 p-2 text-center">Rating</th>
            <th class="border border-gray-300 p-2 text-center">Results</th>
            <th class="border border-gray-300 p-2 text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cls in Model.Classes)
        {
            <tr>
                <td class="border border-gray-300 p-2">@cls.Name</td>
                <td class="border border-gray-300 p-2 text-center">@cls.ScoringMethod</td>
                <td class="border border-gray-300 p-2 text-center">@cls.Rating</td>
                <td class="border border-gray-300 p-2 text-center">
                    <a href="/Results/Create?raceId=@raceId&classId=@cls.Id" class="text-green-600 hover:underline mr-2">+ Add Result</a>
                    <a href="/Results?eventId=@eventId" class="text-blue-600 hover:underline">View Results</a>
                </td>
                <td class="border border-gray-300 p-2 text-center">
                    <form method="post" asp-action="DeleteClass" asp-route-eventId="@eventId" asp-route-raceId="@raceId" asp-route-classId="@cls.Id" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="text-red-600 hover:underline" onclick="return confirm('Are you sure you want to delete the class "@cls.Name"?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="/Events/Races?eventId=@eventId" class="underline">Back to Races</a></p>
