@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div>
    @{
        var user = HttpContextAccessor.HttpContext?.User;
        if (user?.Identity?.IsAuthenticated ?? false)
        {
            <span>Welcome, @user.Identity.Name</span>
            <form method="post" asp-controller="Account" asp-action="Logout" class="inline ml-4">
                <button type="submit" class="underline hover:text-gray-300">Logout</button>
            </form>
        }
        else
        {
            <a href="/Account/Login" class="underline hover:text-gray-300">Login</a>
        }
    }
</div>
