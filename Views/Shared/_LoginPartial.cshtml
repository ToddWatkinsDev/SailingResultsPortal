@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="flex items-center space-x-4">
    @{
        var user = HttpContextAccessor.HttpContext?.User;
        if (user?.Identity?.IsAuthenticated ?? false)
        {
            <span class="text-white">Welcome, @user.Identity.Name (@user.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value)</span>
            <form method="post" asp-controller="Account" asp-action="Logout" class="inline">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">Logout</button>
            </form>
        }
        else
        {
            <a href="/Account/Login" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm">Login</a>
            <a href="/Account/Register" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm">Sign Up</a>
        }
    }
</div>
