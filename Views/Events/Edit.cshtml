@model SailingResultsPortal.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<h1 class="text-2xl font-bold mb-4">Edit Event</h1>

<form method="post" class="max-w-md bg-white rounded shadow p-6">
    <label class="block mb-2 font-semibold" for="Name">Event Name</label>
    <input asp-for="Name" id="Name" name="Name" class="w-full mb-4 p-2 border rounded" required />

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Save</button>
    <a href="/Events" class="ml-4 underline">Cancel</a>
</form>
