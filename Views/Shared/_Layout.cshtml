<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sailing Results Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen flex flex-col">

    <header class="bg-blue-800 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="font-bold text-xl hover:underline">Sailing Results Portal</a>

            <nav class="space-x-4">
                <a href="/Events" class="hover:underline">Events</a>
            </nav>

            <partial name="_LoginPartial" />
        </div>
    </header>

    <main class="container mx-auto p-4 flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-blue-800 text-white text-center p-4 mt-8">
        &copy; @DateTime.Now.Year Sailing Results Portal
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
