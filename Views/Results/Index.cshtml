@model List<SailingResultsPortal.Models.Result>

@{
    ViewData["Title"] = "Results";
    string raceId = Context.Request.Query["raceId"].ToString() ?? string.Empty;
    string classId = Context.Request.Query["classId"].ToString() ?? string.Empty;
    string eventId = ViewData["EventId"] as string ?? ""; // Ideally pass this from controller
}

<nav class="text-sm text-gray-600 mb-4" aria-label="Breadcrumb">
    <ol class="list-reset flex">
        <li><a href="/Events" class="hover:underline">Events</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/Events/Races?eventId=@eventId" class="hover:underline">Races</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/Events/Classes?eventId=@eventId&raceId=@raceId" class="hover:underline">Classes</a></li>
        <li><span class="mx-2">/</span></li>
        <li>Results</li>
    </ol>
</nav>

<h1 class="text-2xl font-bold mb-4">Results</h1>

<a href="/Results/Create?raceId=@raceId&classId=@classId" 
   class="inline-block mb-4 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">+ Add Result</a>

<table class="w-full border-collapse border border-gray-300">
    <thead>
        <tr class="bg-gray-200">
            <th class="border border-gray-300 p-2 text-center">Position</th>
            <th class="border border-gray-300 p-2">Sailor Name</th>
            <th class="border border-gray-300 p-2">Sail Number</th>
            <th class="border border-gray-300 p-2 text-center">Finish Time</th>
            <th class="border border-gray-300 p-2 text-center">Corrected Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td class="border border-gray-300 p-2 text-center">@result.Position</td>
                <td class="border border-gray-300 p-2">@result.SailorName</td>
                <td class="border border-gray-300 p-2">@result.SailNumber</td>
                <td class="border border-gray-300 p-2 text-center">@result.FinishTime.ToString(@"hh\:mm\:ss")</td>
                <td class="border border-gray-300 p-2 text-center">@result.CorrectedTime:F2</td>
            </tr>
        }
    </tbody>
</table>
